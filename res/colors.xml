<?xml version="1.0" encoding="utf-8"?>
<colors>
	<!--
	to define a specific RGB color, set attributes as of
	example:
	<color name="name_of_color" r="(0-255)" g="(0-255)" b="(0-255)" />

	to make a color link to another color, set the element value as the link references
	example:
	<color name="color_ref">name_of_color</color>
	-->
	<color name="black" r="0" g="0" b="0" />
	<color name="white" r="255" g="255" b="255" />
	<color name="main_background" r="10" g="10" b="150" />

	<color name="gamescreen_background" ref="main_background" />
	<color name="infopanel_background" ref="white" />
	<color name="startmenu_background" ref="main_background" />
	<color name="infoscreen_background" ref="main_background" />
	<color name="resultscreen_background" ref="main_background" />
	<color name="gamefield_background" r="100" g="100" b="250" />
	<color name="buffer_view_background" r="10" g="10" b="200" />
	<color name="resultscreen_text" ref="black" />
	<color name="info_text" ref="black" />
	<color name="info_article_background" r="190" g="190" b="0" />
	<color name="cpu_fill" r="250" g="250" b="0" />
	<color name="cpu_border" ref="black" />
	<color name="player" r="250" g="0" b="0" />
	<color name="packet" r="150" g="150" b="100" />
	<color name="packet_border" ref="black" />
	<color name="packet_text" ref="black" />
	<color name="startmenu_gametitle" ref="black" />
	<color name="infopanel_text" ref="black" />
	<color name="result_article_player" ref="white" />
</colors>
