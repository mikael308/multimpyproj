<?xml version="1.0" encoding="utf-8"?>
<colors>
	<color name="game_buffer_background" r="250" g="10" b="10" />
	<color name="info_article_background" r="100" g="100" b="0" />
	
	
	<!--
	to define a specific RGB color, set attributes as of
	example:
	<color name="name_of_color" r="(0-255)" g="(0-255)" b="(0-255)" />

	to make a color link to another color, set the element value as the link references
	example:
	<color name="color_ref">name_of_color</color>
	-->
	<color name="black" r="0" g="0" b="0" />
	<color name="main_background" r="10" g="10" b="150" />
	<color name="gamescreen_background" ref="main_background" />
	<color name="startmenu_background" ref="main_background" />
	<color name="infoscreen_background" ref="main_background" />

	<color name="info_text" ref="black" />
	<color name="player" r="250" g="0" b="0" />
</colors>
